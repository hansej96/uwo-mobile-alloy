        <NavigationGroup id="navgroup" platform="ios,mobileweb">
            <Window class="index" title="Dashboard">
                <View id="dashboard">
                    <ImageView id="news" class="icon" onClick="newsEventsClick" image="/images/icons/news.png"/>
                    <ImageView id="people" class="icon" onClick="peoplePlacesClick" image="/images/icons/peopleplaces.png"/>
                    <ImageView id="links" class="icon" onClick="quickLinksClick" image="/images/icons/quicklinks.png"/>
